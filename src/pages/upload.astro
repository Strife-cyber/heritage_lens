<script>
  import * as THREE from 'three';
  import { gsap } from 'gsap';

  // Variables globales pour Three.js
  let modelScene: THREE.Scene | null = null;
  let modelCamera: THREE.PerspectiveCamera | null = null;
  let modelRenderer: THREE.WebGLRenderer | null = null;
  let model: THREE.Group | null = null;
  let generatedVideoBlob: Blob | null = null;
  let generatedImageBlob: Blob | null = null;
  let isRecording = false;

  // Initialiser Three.js en arri√®re-plan
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      initThreeJS();
      initFileUploads();
      initFormSubmission();
    });
  }

  function initThreeJS() {
    const canvas = document.getElementById('three-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const scene = new THREE.Scene();
    const camera = new THREE.PerspectiveCamera(
      75,
      window.innerWidth / window.innerHeight,
      0.1,
      1000
    );
    const renderer = new THREE.WebGLRenderer({
      canvas,
      alpha: true,
      antialias: true,
    });

    renderer.setSize(window.innerWidth, window.innerHeight);
    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));

    camera.position.z = 5;

    // Particules violettes subtiles
    const particlesGeometry = new THREE.BufferGeometry();
    const particlesCount = 1000;
    const posArray = new Float32Array(particlesCount * 3);

    for (let i = 0; i < particlesCount * 3; i++) {
      posArray[i] = (Math.random() - 0.5) * 20;
    }

    particlesGeometry.setAttribute('position', new THREE.BufferAttribute(posArray, 3));

    const particlesMaterial = new THREE.PointsMaterial({
      size: 0.02,
      color: 0x8b5cf6,
      transparent: true,
      opacity: 0.4,
    });

    const particlesMesh = new THREE.Points(particlesGeometry, particlesMaterial);
    scene.add(particlesMesh);

    const animate = () => {
      requestAnimationFrame(animate);
      particlesMesh.rotation.y += 0.0005;
      renderer.render(scene, camera);
    };

    animate();

    window.addEventListener('resize', () => {
      camera.aspect = window.innerWidth / window.innerHeight;
      camera.updateProjectionMatrix();
      renderer.setSize(window.innerWidth, window.innerHeight);
    });
  }

  function initFileUploads() {
    const fileInputs = [
      { id: 'image', previewId: 'image-preview', areaId: 'image-upload-area' },
      { id: 'video', previewId: 'video-preview', areaId: 'video-upload-area' },
      { id: 'model3d', previewId: 'model-preview', areaId: 'model-upload-area' },
    ];

    fileInputs.forEach(({ id, previewId, areaId }) => {
      const input = document.getElementById(id) as HTMLInputElement;
      const preview = document.getElementById(previewId);
      const area = document.getElementById(areaId);

      if (!input || !preview || !area) return;

      // Gestion du changement de fichier
      input.addEventListener('change', (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) {
          handleFileSelect(file, id, preview, area);
        }
      });

      // Drag and drop
      area.addEventListener('dragover', (e) => {
        e.preventDefault();
        area.classList.add('dragover');
      });

      area.addEventListener('dragleave', () => {
        area.classList.remove('dragover');
      });

      area.addEventListener('drop', (e) => {
        e.preventDefault();
        area.classList.remove('dragover');
        const file = e.dataTransfer?.files[0];
        if (file) {
          input.files = e.dataTransfer.files;
          handleFileSelect(file, id, preview, area);
        }
      });
    });
  }

  function handleFileSelect(file: File, type: string, preview: HTMLElement, area: HTMLElement) {
    area.classList.add('has-file');

    // Cacher les placeholders (ic√¥ne, label, hint)
    const uploadContent = area.querySelector('.upload-content');
    if (uploadContent) {
      const icon = uploadContent.querySelector('.upload-icon');
      const label = uploadContent.querySelector('.upload-label');
      const hint = uploadContent.querySelector('.upload-hint');
      
      if (icon) (icon as HTMLElement).style.display = 'none';
      if (label) (label as HTMLElement).style.display = 'none';
      if (hint) (hint as HTMLElement).style.display = 'none';
    }

    if (type === 'image') {
      const reader = new FileReader();
      reader.onload = (e) => {
        preview.innerHTML = `<img src="${e.target?.result}" alt="Preview" style="max-width: 100%; max-height: 400px; object-fit: contain; border-radius: 8px;" />`;
        preview.classList.add('active');
      };
      reader.readAsDataURL(file);
    } else if (type === 'video') {
      const reader = new FileReader();
      reader.onload = (e) => {
        preview.innerHTML = `<video src="${e.target?.result}" controls style="max-width: 100%; max-height: 400px; object-fit: contain; border-radius: 8px;"></video>`;
        preview.classList.add('active');
      };
      reader.readAsDataURL(file);
    } else if (type === 'model3d') {
      // Cacher compl√®tement upload-content pour le mod√®le
      const modelContent = area.querySelector('.upload-content');
      if (modelContent) {
        (modelContent as HTMLElement).style.display = 'none';
      }
      
      preview.innerHTML = `
        <div class="file-info">
          <strong>${file.name}</strong><br>
          <span>Taille: ${(file.size / 1024 / 1024).toFixed(2)} MB</span>
        </div>
      `;
      preview.classList.add('active');
      
      // Charger le mod√®le et g√©n√©rer vid√©o/image
      if (file.name.endsWith('.glb')) {
        loadModelAndGenerateAssets(file);
      }
    }
  }

  // Initialiser la sc√®ne Three.js pour le mod√®le
  function initModelScene() {
    const canvas = document.getElementById('model-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    // Dimensions pour le rendu
    const width = 1920;
    const height = 1080;
    canvas.width = width;
    canvas.height = height;

    modelScene = new THREE.Scene();
    modelScene.background = new THREE.Color(0x1a202c); // Fond sombre

    modelCamera = new THREE.PerspectiveCamera(50, width / height, 0.1, 1000);
    modelCamera.position.set(0, 0, 5);

    modelRenderer = new THREE.WebGLRenderer({
      canvas,
      antialias: true,
      alpha: false,
    });
    modelRenderer.setSize(width, height);
    modelRenderer.setPixelRatio(2);
    modelRenderer.shadowMap.enabled = true;
    modelRenderer.shadowMap.type = THREE.PCFSoftShadowMap;

    // √âclairage
    const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
    modelScene.add(ambientLight);

    const directionalLight1 = new THREE.DirectionalLight(0xffffff, 0.8);
    directionalLight1.position.set(5, 5, 5);
    directionalLight1.castShadow = true;
    modelScene.add(directionalLight1);

    const directionalLight2 = new THREE.DirectionalLight(0xffffff, 0.4);
    directionalLight2.position.set(-5, 3, -5);
    modelScene.add(directionalLight2);
  }

  // Charger le mod√®le et g√©n√©rer les assets
  async function loadModelAndGenerateAssets(file: File) {
    const generationStatus = document.getElementById('generation-status') as HTMLElement;
    const generatedVideoPreview = document.getElementById('generated-video-preview') as HTMLElement;
    const generatedImagePreview = document.getElementById('generated-image-preview') as HTMLElement;

    try {
      // Afficher le statut de g√©n√©ration
      if (generationStatus) generationStatus.style.display = 'flex';
      if (generatedVideoPreview) generatedVideoPreview.style.display = 'none';
      if (generatedImagePreview) generatedImagePreview.style.display = 'none';

      // Initialiser la sc√®ne si n√©cessaire
      if (!modelScene) {
        initModelScene();
      }

      if (!modelScene || !modelCamera || !modelRenderer) {
        throw new Error('Sc√®ne non initialis√©e');
      }

      // Charger le mod√®le
      console.log('Chargement du mod√®le GLB...');
      
      // Importer dynamiquement GLTFLoader
      const { GLTFLoader } = await import('three/examples/jsm/loaders/GLTFLoader.js');
      const loader = new GLTFLoader();
      
      const url = URL.createObjectURL(file);
      
      const gltf = await new Promise<THREE.Group>((resolve, reject) => {
        loader.load(
          url,
          (gltf) => {
            console.log('Mod√®le charg√© avec succ√®s');
            resolve(gltf.scene);
          },
          (progress) => {
            if (progress.lengthComputable) {
              const percent = (progress.loaded / progress.total) * 100;
              console.log('Progression du chargement:', percent.toFixed(1) + '%');
            }
          },
          (error) => {
            console.error('Erreur lors du chargement du mod√®le:', error);
            reject(error);
          }
        );
      });

      // Nettoyer l'ancien mod√®le
      if (model) {
        modelScene.remove(model);
        model.traverse((child) => {
          if (child instanceof THREE.Mesh) {
            child.geometry.dispose();
            if (Array.isArray(child.material)) {
              child.material.forEach((mat) => mat.dispose());
        } else {
              child.material.dispose();
            }
        }
      });
    }

      model = gltf;
      modelScene.add(model);

      // Calculer la bounding box pour centrer et ajuster la taille
      const box = new THREE.Box3().setFromObject(model);
      const center = box.getCenter(new THREE.Vector3());
      const size = box.getSize(new THREE.Vector3());
      const maxDim = Math.max(size.x, size.y, size.z);
      const scale = 2.5 / maxDim; // Ajuster pour que le mod√®le soit bien visible

      model.scale.multiplyScalar(scale);
      model.position.sub(center.multiplyScalar(scale));

      // Ajuster la cam√©ra pour cadrer le mod√®le
      const distance = maxDim * 1.5;
      modelCamera.position.set(0, 0, distance);
      modelCamera.lookAt(0, 0, 0);

      // G√©n√©rer la vid√©o et l'image
      console.log('D√©but de la g√©n√©ration de la vid√©o et de l\'image...');
      try {
        await Promise.all([
          generateVideo().catch(err => {
            console.error('Erreur lors de la g√©n√©ration de la vid√©o:', err);
            throw err;
          }),
          generateImage().catch(err => {
            console.error('Erreur lors de la g√©n√©ration de l\'image:', err);
            throw err;
          })
        ]);
        console.log('G√©n√©ration termin√©e avec succ√®s');
      } catch (error) {
        console.error('Erreur lors de la g√©n√©ration:', error);
        throw error;
      }

      // Cacher compl√®tement upload-content pour la vid√©o
      const videoArea = document.getElementById('video-upload-area');
      if (videoArea) {
        videoArea.classList.add('has-generated');
        const videoContent = videoArea.querySelector('.upload-content');
        if (videoContent) {
          (videoContent as HTMLElement).style.display = 'none';
        }
      }

      // Cacher compl√®tement upload-content pour l'image
      const imageArea = document.getElementById('image-upload-area');
      if (imageArea) {
        imageArea.classList.add('has-generated');
        const imageContent = imageArea.querySelector('.upload-content');
        if (imageContent) {
          (imageContent as HTMLElement).style.display = 'none';
        }
      }

      // Afficher les pr√©visualisations avec animation GSAP
      if (generatedVideoBlob && generatedVideoPreview) {
        const videoElement = document.getElementById('generated-video') as HTMLVideoElement;
        if (videoElement) {
          videoElement.src = URL.createObjectURL(generatedVideoBlob);
          generatedVideoPreview.style.display = 'block';
          gsap.from(generatedVideoPreview, {
            opacity: 0,
            y: 20,
            duration: 0.5,
            ease: 'power2.out'
          });
        }
      }

      if (generatedImageBlob && generatedImagePreview) {
        const imageElement = document.getElementById('generated-image') as HTMLImageElement;
        if (imageElement) {
          imageElement.src = URL.createObjectURL(generatedImageBlob);
          generatedImagePreview.style.display = 'block';
          gsap.from(generatedImagePreview, {
            opacity: 0,
            y: 20,
            duration: 0.5,
            delay: 0.1,
            ease: 'power2.out'
          });
        }
      }

      if (generationStatus) generationStatus.style.display = 'none';
      URL.revokeObjectURL(url);
    } catch (error) {
      console.error('Erreur lors du chargement du mod√®le:', error);
      if (generationStatus) generationStatus.style.display = 'none';
      alert('Erreur lors du chargement du mod√®le 3D: ' + (error instanceof Error ? error.message : 'Erreur inconnue'));
    }
  }

  // G√©n√©rer la vid√©o de rotation 360¬∞
  async function generateVideo(): Promise<void> {
    return new Promise((resolve, reject) => {
      console.log('D√©but de la g√©n√©ration de la vid√©o...');
      if (!modelScene || !modelCamera || !modelRenderer || !model) {
        console.error('Sc√®ne non initialis√©e');
        reject(new Error('Sc√®ne non initialis√©e'));
        return;
      }

      if (isRecording) {
        console.error('Enregistrement d√©j√† en cours');
        reject(new Error('Enregistrement d√©j√† en cours'));
        return;
      }

      isRecording = true;
      const canvas = modelRenderer.domElement;
      console.log('Canvas pour enregistrement:', canvas);
      
      // Essayer diff√©rents codecs
      const codecs = [
        'video/webm;codecs=vp9',
        'video/webm;codecs=vp8',
        'video/webm'
      ];

      let mediaRecorder: MediaRecorder | null = null;
      let stream: MediaStream | null = null;

      // Trouver un codec support√©
      for (const codec of codecs) {
        if (MediaRecorder.isTypeSupported(codec)) {
          try {
            stream = canvas.captureStream(30); // 30 FPS
            mediaRecorder = new MediaRecorder(stream, { mimeType: codec });
            break;
          } catch (e) {
            console.warn(`Codec ${codec} non support√©, essai suivant...`);
          }
        }
      }

      if (!mediaRecorder || !stream) {
        isRecording = false;
        console.error('Aucun codec vid√©o support√©');
        reject(new Error('Aucun codec vid√©o support√©. Votre navigateur ne supporte pas l\'enregistrement vid√©o.'));
        return;
      }

      console.log('Codec utilis√©:', mediaRecorder.mimeType);

      const chunks: Blob[] = [];
      mediaRecorder.ondataavailable = (e) => {
        if (e.data && e.data.size > 0) {
          chunks.push(e.data);
        }
      };

      mediaRecorder.onstop = () => {
        isRecording = false;
        console.log('Enregistrement vid√©o termin√©, nombre de chunks:', chunks.length);
        if (chunks.length > 0) {
          generatedVideoBlob = new Blob(chunks, { type: mediaRecorder!.mimeType });
          console.log('Vid√©o g√©n√©r√©e, taille:', (generatedVideoBlob.size / 1024 / 1024).toFixed(2), 'MB');
        } else {
          console.warn('Aucun chunk vid√©o enregistr√©');
        }
        // Arr√™ter le stream
        stream!.getTracks().forEach(track => track.stop());
        resolve();
      };

      mediaRecorder.onerror = (e) => {
        isRecording = false;
        stream!.getTracks().forEach(track => track.stop());
        reject(new Error('Erreur lors de l\'enregistrement vid√©o'));
      };

      // Rotation lente sur 10 secondes (360¬∞)
      const duration = 10000; // 10 secondes
      const startRotation = model.rotation.y;
      const targetRotation = startRotation + Math.PI * 2;

      // D√©marrer l'enregistrement
      mediaRecorder.start(100); // Collecter des donn√©es toutes les 100ms

      // Animer la rotation avec GSAP et rendre chaque frame
      gsap.to(model.rotation, {
        y: targetRotation,
        duration: duration / 1000,
        ease: 'none',
        onUpdate: () => {
          modelRenderer!.render(modelScene!, modelCamera!);
        },
        onComplete: () => {
          // Attendre un peu pour s'assurer que toutes les frames sont captur√©es
          setTimeout(() => {
            if (mediaRecorder && mediaRecorder.state !== 'inactive') {
              mediaRecorder.stop();
            } else {
              isRecording = false;
              resolve();
            }
          }, 500);
        }
      });
    });
  }

  // G√©n√©rer l'image statique
  async function generateImage(): Promise<void> {
    return new Promise((resolve) => {
      console.log('D√©but de la g√©n√©ration de l\'image...');
      if (!modelScene || !modelCamera || !modelRenderer || !model) {
        console.warn('Sc√®ne non initialis√©e pour l\'image');
        resolve();
        return;
      }

      // R√©initialiser la rotation pour l'image
      model.rotation.y = 0;
      modelRenderer.render(modelScene, modelCamera);
      console.log('Rendu de l\'image effectu√©');

      // Attendre un frame pour s'assurer que le rendu est complet
      requestAnimationFrame(() => {
        // Capturer l'image
        const canvas = modelRenderer!.domElement;
        canvas.toBlob((blob) => {
          if (blob) {
            generatedImageBlob = blob;
            console.log('Image g√©n√©r√©e, taille:', (blob.size / 1024).toFixed(2), 'KB');
          } else {
            console.warn('√âchec de la g√©n√©ration de l\'image');
          }
          resolve();
        }, 'image/png', 1.0);
      });
    });
  }

